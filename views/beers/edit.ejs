<%- include('../partials/header') -%>
    <div class="row">
        <div class="col-md-12 px-2 px-md-0">
            <div class="card">
                <div class="card-body">
                    <button type="button" class="btn btn-sm btn-outline-danger float-right" data-toggle="modal" data-target="#exampleModal">
                        Delete
                    </button>
                    <form action="/beers/<%= beer._id %>?_method=PUT" method="POST">
                        <div class="float-right">
                            <button class="btn btn-sm btn-outline-success mx-1">Save</button>
                        </div>
                        <h4>Edit Beer</h4>
                        <p class="text-lite">
                            Add a beer, then create a recipe to brew it.
                        </p>
                        <div class="form-row mt-2 mb-2">
                            <div class="col-sm-12">
                                <div class="form-group row mb-1">
                                    <label for="beerName" class="col-sm-12 recipe-label">Name</label>
                                    <div class="col-sm-12">
                                        <input type="text" id="beerName"
                                            class="form-control form-control-sm bottom-border" name="beer[name]"
                                            value="<%= beer.name %>">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group row mb-1">
                                    <label for="beerStyle" class="col-sm-12 recipe-label">Style</label>
                                    <div class="col-sm-12">
                                        <input type="text" id="beerStyle"
                                            class="form-control form-control-sm bottom-border" name="beer[style]"
                                            value="<%= beer.style %>">
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <div class="form-group row mb-1">
                                    <label for="beerDesc" class="col-sm-12 recipe-label">Description</label>
                                    <div class="col-sm-12">
                                        <textarea id="beerDesc" class="form-control form-control-sm bottom-border"
                                            name="beer[description]" rows="3"><%= beer.description %></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    
                    
                </div>
            </div>
        </div>
    </div>
    <!-- Delete Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirm Delete Beer</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this beer? All related recipe and brew data will also be deleted and this action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <form action="/beers/<%= beer._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') -%>