
<!DOCTYPE html>
<html>
  <head>
    <!-- Make site responsive on mobile/tablet -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BRUNO - <%= beer.name %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script defer src="https://use.fontawesome.com/releases/v5.2.0/js/all.js" integrity="sha384-4oV5EgaV02iISL2ban6c/RmotsABqE4yZxZLcYMAdG7FAPsyHYAPpywE9PJo+Khy" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="/css/main.css" type="text/css"/>
  </head>
  <body class="mb-5">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
      <a class="navbar-brand" href="/">BRUNO</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/beers">Beers</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/recipes">Recipes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/brews">Brews</a>
          </li>
        </ul>
        <ul class="navbar-nav navbar-right">
          <li class="nav-item">
            <a class="nav-link" href="#">Future Login Link</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Future Login Link</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <!-- New nav tabs -->
      <div class="row mb-2">
        <div class="col-md-12 px-2 px-md-0">
          <ul class="nav nav-tabs">
            <li class="nav-item">
              <a class="nav-link active" href="/beers/<%= beer.id %>/recipes/<%= recipe.id %>">Recipe</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/beers/<%= beer.id %>/recipes/<%= recipe.id %>/brews">Brews</a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Recipe Info -->
      <div class="row">
        <div class="col-md-12 px-2 px-md-0">

          <!-- Recipe Overview & Targets -->
          <div class="card mb-2">
            <div class="card-body">
              <!-- Save and Edit buttons should just show one or the other -->
              <div class="float-right">
                <a class="btn btn-sm btn-outline-warning" role="button" onclick="toggler('note-item-1');">Edit</a>
              </div>
              <!-- Beer Details -->
              <h3 class="d-inline-block mb-0"><%= beer.name %></h3><span class="pl-1"><%= beer.style %></span>
              <p class="text-lite italic">
                Version <%= recipe.version %>
              </p>
              <!-- Targets -->
              <hr>
              <div class="row">
                <div class="col-6 col-md-3 display-4 text-center"><%= recipe.recipe.batchSize %><span class="d-block text-lite">Litres</span></div>
                <div class="col-6 col-md-3 display-4 text-center"><%= recipe.recipe.targetABV %><span class="d-block text-lite">% ABV</span></div>
                <div class="col-6 col-md-3 display-4 text-center"><%= recipe.recipe.targetOG %><span class="d-block text-lite">OG</span></div>
                <div class="col-6 col-md-3 display-4 text-center"><%= recipe.recipe.targetFG %><span class="d-block text-lite">FG</span></div>
              </div>
              <!-- Description -->
              <hr>
              <p class="text-lite">
                <%= recipe.recipe.description %>
              </p>
              <!-- Recipe Notes -->
              <ul>
                <% for (let note of recipe.recipe.recipeNotes) { %>
                  <li class="text-lite"><%= note.content %></li>
                <% } %>
              </ul>
            </div>
          </div>
          
          <!-- Malts -->
          <div class="card mb-2">
            <div class="card-body">
              <h4>Malts</h4>
              <div id="malt-table-container">
                <table id="malt-table" class="text-lite table table-sm mb-1">
                  <thead>
                    <tr>
                      <th class="recipe-label" scope="col">Name</th>
                      <th class="recipe-label text-center" scope="col">Qty (kg)</th>
                      <th class="recipe-label text-center" scope="col">PPG</th>
                      <th class="recipe-label text-center" scope="col">Points</th>
                      <th class="recipe-label text-center" scope="col">SRM/lb/G</th>
                      <th class="recipe-label text-center" scope="col">MCU</th>
                      <th class="recipe-label text-center" scope="col">SRM</th>
                    </tr>
                  </thead>
                  <tbody id="malt-list">
                    <% for (let malt of recipe.recipe.malts) { %>
                      <tr class="malt-row text-center">
                        <td class="text-left"><%= malt.name %></td>
                        <td><%= malt.qty %></td>
                        <td><%= malt.maxPPG %></td>
                        <td><%= malt.points %></td>
                        <td><%= malt.srmLbG %></td>
                        <td><%= malt.mcu %></td>
                        <td><%= malt.srm %></td>
                      </tr>
                    <% } %>
                  </tbody>
                  <tfoot>
                    <!-- Totals -->
                    <tr class="text-center bold">
                      <td></td>
                      <!-- Total Malt Weight -->
                      <td><%= recipe.recipe.maltTotals.qty %></td>
                      <td></td>
                      <!-- Total Gravity -->
                      <td><%= recipe.recipe.maltTotals.points %></td>
                      <td></td>
                      <!-- Total MCU -->
                      <td><%= recipe.recipe.maltTotals.mcu %></td>
                      <!-- Total SRM -->
                      <td><%= recipe.recipe.maltTotals.srm %></td>
                    </tr>         
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
          
          <!-- Hops -->
          <div class="card mb-2">
            <div class="card-body">
              <h4>Hops</h4>
              <div id="hop-table-container">
                <table id="hop-table" class="text-lite table table-sm mb-1">
                  <thead>
                    <tr>
                      <th class="recipe-label" scope="col">Name</th>
                      <th class="recipe-label text-center" scope="col">AA%</th>
                      <th class="recipe-label text-center" scope="col">Qty (g)</th>
                      <th class="recipe-label text-center" scope="col">AAU</th>
                      <th class="recipe-label text-center col-btn-group" scope="col">Usage</th>
                      <th class="recipe-label text-center" scope="col">Timing</th>
                    </tr>
                  </thead>
                  <tbody id="hop-list">
                    <% for (let hop of recipe.recipe.hops) { %>
                      <tr class="hop-row text-center">
                        <td class="text-left"><%= hop.name %></td>
                        <td><%= hop.aa %></td>
                        <td><%= hop.qty %></td>
                        <td><%= hop.aau %></td>
                        <td><%= hop.usage %></td>
                        <td><%= hop.timing %></td>
                      </tr>
                    <% } %>
                  </tbody>
                  <tfoot>
                    <!-- Totals -->
                    <tr class="text-center bold">
                      <td></td>
                      <td></td>
                      <!-- Total Qty -->
                      <td><%= recipe.recipe.hopTotals.qty %></td>
                      <!-- Total AAU -->
                      <td><%= recipe.recipe.hopTotals.aau %></td>
                      <td></td>
                      <td></td>
                    </tr>         
                  </tfoot>                      
                </table>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="col-md-6">
              <!-- Yeast -->
              <div class="card mb-2">
                <div class="card-body">
                  <h4>Yeast</h4>
                  <div class="form-row">
                    <ul class="pl-4">
                      <!-- yeastQty x yeastLab yeastStrain (yeastState) -->
                      <li class="text-lite">
                        <%= recipe.recipe.yeast.qty %> x <span class="bold"><%= recipe.recipe.yeast.lab %></span> <span class="bold"><%= recipe.recipe.yeast.strain %></span> (<%= recipe.recipe.yeast.state %>).
                      </li>
                      <!-- Starter Details - yeastPrepDesc if truthy, otherwise skip this li. -->
                      <% if (recipe.recipe.yeast.starter === true) { %>
                        <li class="text-lite">
                          Starter:
                          <ul>
                            <% for (let note of recipe.recipe.yeast.starterNotes) { %>
                              <li class="text-lite">
                                <%= note.content %>
                              </li>
                            <% } %>
                          </ul>
                        </li>
                      <% } %>
                      <!-- Pitching Details - Pitch at yeastPitchTemp -->
                      <li class="text-lite">
                        Pitch at <span class="bold"><%= recipe.recipe.yeast.pitchTemp %>C</span>.
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <!-- Fermentation & Conditioning -->
              <div class="card mb-2">
                <div class="card-body">
                  <h4>Fermentation & Conditioning</h4>
                  <div id="ferm-table-container">
                    <table id="ferm-table" class="text-lite table table-sm mb-1">
                      <thead>
                        <tr>
                          <th class="recipe-label" scope="col">Stage</th>
                          <th class="recipe-label text-center" scope="col">Temp (C)</th>
                          <th class="recipe-label text-center" scope="col">Days</th>
                        </tr>
                      </thead>
                      <tbody id="ferm-list">
                        <% for (let ferm of recipe.recipe.ferm) { %>
                          <tr class="ferm-row text-center">
                            <td class="text-left"><%= ferm.stage %></td>
                            <td><%= ferm.temp %></td>
                            <td><%= ferm.days %></td>
                          </tr>
                        <% } %>
                      </tbody>
                      <tfoot>
                        <!-- Totals -->
                        <tr class="text-center">
                          <td></td>
                          <td></td>
                          <td class="bold"><%= recipe.recipe.fermDays %></td>
                        </tr>         
                      </tfoot>                      
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>

          
          <!-- Water -->
          <div class="form-row mb-4">
            <div class="col-md-6">
              <div class="card mb-2">
                <div class="card-body">
                  <h4>Water</h4>
                  <ul class="pl-4">
                    <!-- waterSource -->
                    <li class="text-lite">
                      Sourced from <span class="bold"><%= recipe.recipe.water.source %></span>.
                    </li>
                    <% if (recipe.recipe.water.adjustments === true) { %>
                      <!-- waterAdjustDesc if waterAdjust is true -->
                      <li class="text-lite">
                        Adjust with <span class="bold"><%= recipe.recipe.water.adjustmentNotes %></span>.
                      </li>
                    <% } %>
                  </ul>
    
                  <p class="text-lite italic">Volumes below calculated automatically/manually.</p>
                  <div id="water-table-container">
                    <table id="water-table" class="table table-sm mb-1">
                      <thead>
                        <tr>
                          <th scope="col"></th>
                          <th class="col-water recipe-label text-center" scope="col">Volume (L)</th>
                        </tr>
                      </thead>
                      <tbody>
                        <!-- Fermenter Target -->
                        <tr class="water-row">
                          <td class="border-0">
                            <span class="recipe-label">Batch Size</span>
                          </td>
                          <td class="border-0">
                            <label class="sr-only" for="batchSizeWaterCalc">Batch Size</label>
                            <input id="batchSizeWaterCalc" class="form-control form-control-sm border-0 text-center d-none" type="number" min="0" step="0.01" value="19" disabled>  
                            <a class="btn btn-sm btn-outline-secondary" tabindex="0" data-trigger="focus" data-html="true" data-container="body" data-toggle="popover" data-placement="bottom" data-content="<span class='text-lite italic d-block'>Recipe Batch Size</span"><span>19</span></a>
                          </td>
                        </tr>
                        <!-- Kettle Loss -->
                        <tr class="water-row">
                          <td class="border-0">
                            <span class="recipe-label">+ Kettle Loss</span>
                          </td>
                          <td class="border-0">
                            <label class="sr-only" for="kettleLossWaterCalc">Kettle Loss</label>
                            <input id="kettleLossWaterCalc" class="form-control form-control-sm border-0 text-center d-none" type="number" min="0" step="0.01" value="4" disabled>  
                            <a class="btn btn-sm btn-outline-secondary" tabindex="0" data-trigger="focus" data-html="true" data-container="body" data-toggle="popover" data-placement="bottom" data-content="<span class='text-lite italic d-block'>Brewhouse Kettle Loss</span>"><span>4</span></a>
                          </td>
                        </tr>
                        <!-- Boil Off -->
                        <tr class="water-row">
                          <td class="border-0">
                            <span class="recipe-label">+ Boil-Off</span>
                          </td>
                          <td class="border-0">
                            <label class="sr-only" for="boilOffWaterCalc">Boil-Off</label>
                            <input id="boilOffWaterCalc" class="form-control form-control-sm border-0 text-center d-none" type="number" min="0" step="0.01" value="4" name="recipe[boilOffWaterCalc]" disabled>  
                            <a class="btn btn-sm btn-outline-secondary" tabindex="0" data-trigger="focus" data-html="true" data-container="body" data-toggle="popover" data-placement="bottom" data-content="
                            <span class='text-lite italic d-block'>Brewhouse Boil-Off L/hour x (Recipe Boil Minutes / 60 )</span>
                            <span class='text-lite italic d-block'>= <span class='bold'>4</span> x (<span class='bold'>60</span> / 60)</span>
                            <span class='text-lite italic d-block'>= 4 L</span>"><span>4</span></a>
                          </td>
                        </tr>
                        <!-- Pre-Boil Volume -->
                        <tr class="water-row">
                          <td>
                            <span class="recipe-label">= Pre-Boil Volume</span>
                          </td>
                          <td>
                            <label class="sr-only" for="preBoilVolWaterCalc">Pre-Boil Volume</label>
                            <input id="preBoilVolWaterCalc" class="form-control form-control-sm border-0 text-center d-none" type="number" min="0" step="0.01" value="27" name="recipe[preBoilVolume]" disabled>  
                            <a class="btn btn-sm btn-outline-secondary" tabindex="0" data-trigger="focus" data-html="true" data-container="body" data-toggle="popover" data-placement="bottom" data-content="
                            <span class='text-lite italic d-block'>Recipe Batch Size + Brewhouse Kettle Loss + Calculated Boil-Off</span>
                            <span class='text-lite italic d-block'>= <span class='bold'>19</span> + <span class='bold'>4</span> + <span class='bold'>4</span></span>
                            <span class='text-lite italic d-block'>= 27 L</span>"><span>27</span></a>
                          </td>
                        </tr>
                        <!-- Grain Absorption -->
                        <tr class="water-row">
                          <td class="border-0">
                            <span class="recipe-label">+ Grain Loss</span>
                          </td>
                          <td class="border-0">
                            <label class="sr-only" for="grainLossWaterCalc">Grain Loss</label>
                            <input id="grainLossWaterCalc" class="form-control form-control-sm border-0 text-center d-none" type="number" min="0" step="0.01" value="3.96" name="recipe[grainLossWaterCalc]" disabled>  
                            <a class="btn btn-sm btn-outline-secondary" tabindex="0" data-trigger="focus" data-html="true" data-container="body" data-toggle="popover" data-placement="bottom" data-content="
                            <span class='text-lite italic d-block'>Recipe Grain Absorption Rate L/kg x Recipe Total Malt Weight kg</span>
                            <span class='text-lite italic d-block'>= <span class='bold'>1.02</span> x <span class='bold'>3.89</span></span>
                            <span class='text-lite italic d-block'>= 3.96 L</span>"><span>3.96</span></a>
                          </td>
                        </tr>
                        <!-- Total Mash Water -->
                        <tr class="water-row">
                          <td>
                            <span class="recipe-label">= Total Mash Water</span>
                          </td>
                          <td>
                            <label class="sr-only" for="totalMashWaterCalc">Grain Loss</label>
                            <input id="totalMashWaterCalc" class="form-control form-control-sm border-0 text-center d-none" type="number" min="0" step="0.01" value="30.96" name="recipe[totalMashWaterCalc]" disabled>  
                            <a class="btn btn-sm btn-outline-secondary" tabindex="0" data-trigger="focus" data-html="true" data-container="body" data-toggle="popover" data-placement="bottom" data-content="
                            <span class='text-lite italic d-block'>Calculated Pre-Boil Volume L + Calculated Grain Loss L</span>
                            <span class='text-lite italic d-block'>= <span class='bold'>27</span> + <span class='bold'>3.96</span></span>
                            <span class='text-lite italic d-block'>= 30.96 L</span>"><span>30.96</span></a>
                          </td>
                        </tr>
                        <!-- Spacer Row -->
                        <tr>
                          <td class="bottom-border"></td>
                          <td class="bottom-border"></td>
                        </tr>
                      </tbody>
                      <tfoot>
                        <!-- Strike Water -->
                        <tr class="water-row">
                          <td>
                            <span class="recipe-label">Strike Water</span>
                          </td>
                          <td>
                            <label class="sr-only" for="strikeWaterCalc">Strike Water</label>
                            <input id="strikeWaterCalc" class="form-control form-control-sm border-0 text-center d-none" type="number" min="0" step="0.01" value="15.56" name="recipe[strikeWaterCalc]" disabled>  
                            <a class="btn btn-sm btn-outline-secondary" tabindex="0" data-trigger="focus" data-html="true" data-container="body" data-toggle="popover" data-placement="bottom" data-content="
                            <span class='text-lite italic d-block'>Recipe Grist Ratio L/kg x Receipe Total Malt Weight kg</span>
                            <span class='text-lite italic d-block'>= <span class='bold'>4</span> x <span class='bold'>3.89</span></span>
                            <span class='text-lite italic d-block'>= 15.56 L</span>"><span>15.56</span></a>
                          </td>
                        </tr>
                        <!-- Mash Out Water -->
                        <tr id="mashOut-row" class="water-row">
                          <td>
                            <span class="recipe-label">Mash Out Water</span>
                          </td>
                          <td>
                            <label class="sr-only" for="mashOutWaterCalc">Mash Out Water</label>
                            <input id="mashOutWaterCalc" class="form-control form-control-sm border-0 text-center d-none" type="number" min="0" step="0.01" value="5.36" name="recipe[mashOutWaterCalc]" disabled>  
                            <a class="btn btn-sm btn-outline-secondary" tabindex="0" data-trigger="focus" data-html="true" data-container="body" data-toggle="popover" data-placement="bottom" data-content="
                            <span class='text-lite italic d-block'>
                              (T2-T1) x (G + Wm) / (Tw – T2)
                            </span>
                            <span class='text-lite italic d-block mb-1'>
                              = (<span class='bold'>77</span> - <span class='bold'>67</span>) x ((<span class='bold'>3.89</span> x <span class='bold'>0.41</span>) + <span class='bold'>15.6</span>) / (<span class='bold'>100</span> – <span class='bold'>77</span>)
                            </span>
                            <span class='text-lite italic d-block mb-1'>
                              = 5.36 L
                            </span>
                            <hr>
                            <span class='text-lite italic d-block'><span class='bold'>T2</span> = Recipe Mash Out Temp C</span>
                            <span class='text-lite italic d-block'><span class='bold'>T1</span> = Calculated Mash End Temp C (Recipe Mash Temp C, Recipe Mash Length minutes, and Brewhouse Mash Tun Heat Loss C/hour)</span>
                            <span class='text-lite italic d-block'><span class='bold'>G</span> = Recipe Total Malt Weight x Brewhouse Grain Specific Heat</span>
                            <span class='text-lite italic d-block'><span class='bold'>Wm</span> = Recipe Strike Water Volume L</span>
                            <span class='text-lite italic d-block'><span class='bold'>Tw</span> = Brewhouse Mash Out Water Temp C</span>"><span>5.36</span></a>
                          </td>
                        </tr>
                        <!-- Sparge Water -->
                        <tr class="water-row">
                          <td>
                            <span class="recipe-label">Sparge Water</span>
                          </td>
                          <td>
                            <label class="sr-only" for="spargeWaterCalc">Mash Out Water</label>
                            <input id="spargeWaterCalc" class="form-control form-control-sm border-0 text-center d-none" type="number" min="0" step="0.01" value="9.64" name="recipe[spargeWaterCalc]" disabled>  
                            <a class="btn btn-sm btn-outline-secondary" tabindex="0" data-trigger="focus" data-html="true" data-container="body" data-toggle="popover" data-placement="bottom" data-content="
                            <span class='text-lite italic d-block'>
                              Calculated Total Mash Water L - Calculated Strike Water L - Calculated Mash Out Water L
                            </span>
                            <span class='text-lite italic d-block'>
                              = <span class='bold'>30.56</span> - <span class='bold'>15.56</span> - <span class='bold'>5.36</span>
                            </span>
                            <span class='text-lite italic d-block'>
                              = 9.64 L
                            </span>
                            "><span>9.64</span></a>
                          </td>
                        </tr>       
                      </tfoot>                      
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              
              <!-- Mash -->
              <div class="card mb-2">
                <div class="card-body">
                  <h4>Mash</h4>
                  <ul class="pl-4">
                    <!-- mashMethod -->
                    <li class="text-lite">
                      <span class="bold"><%= recipe.recipe.mash.method %></span> mash.
                    </li>
                    <!-- gristRatio -->
                    <li class="text-lite">
                      Grist Ratio of <span class="bold"><%= recipe.recipe.mash.gristRatio %> l/kg</span>.
                    </li>
                    <!-- expected grain absorption - not sure we'll keep this here if we show a detailed breakdown of the water calculation below -->
                    <li class="text-lite">
                      Expected grain absorption <span class="bold"><%= recipe.recipe.mash.absorptionLKg %> l/Kg</span>.
                    </li>
                  </ul>
    
                  <div id="mash-table-container">
                    <table id="mash-table" class="text-lite table table-sm mb-1">
                      <thead>
                        <tr>
                          <th class="recipe-label" scope="col">Rest Type</th>
                          <th class="recipe-label text-center" scope="col">Temp (C)</th>
                          <th class="recipe-label text-center" scope="col">Minutes</th>
                        </tr>
                      </thead>
                      <tbody id="mash-list">
                        <% for (let step of recipe.recipe.mash.schedule) { %>
                          <tr class="mash-row text-center">
                            <td class="text-left"><%= step.restType %></td>
                            <td><%= step.temp %></td>
                            <td><%= step.minutes %></td>
                          </tr>
                        <% } %>
                      </tbody>
                      <tfoot>
                        <!-- Totals -->
                        <tr class="text-center">
                          <td></td>
                          <td></td>
                          <!-- Total Mash Minutes -->
                          <td class="bold"><%= recipe.recipe.mash.totalMashMinutes %></td>
                        </tr>         
                      </tfoot>                      
                    </table>
                  </div>
                  <ul class="pl-4">
                    <!-- only show this li if mashOut is true -->
                    <% if (recipe.recipe.mash.mashOut === true) { %>
                      <li class="text-lite">
                        Target Mash-Out temperature <span class="bold"><%= recipe.recipe.mash.mashOutWaterTemp %>C</span>.
                      </li>
                    <% } %>
                    <!-- spargeMethod and spargeWaterTemp -->
                    <li class="text-lite">
                      <span class="bold"><%= recipe.recipe.mash.spargeMethod %></span> sparge with <span class="bold"><%= recipe.recipe.mash.spargeWaterTemp %>C</span> water.
                    </li>
                  </ul>
                </div>
              </div>
              
              <!-- Finings -->
              <div class="card mb-2">
                <div class="card-body">
                  <h4>Finings</h4>
                  <div class="form-row">
                    <!-- <div class="col-md-9"> -->
                      <div id="finings-table-container">
                        <table id="finings-table" class="text-lite table table-sm mb-1">
                          <thead>
                            <tr>
                              <th class="recipe-label" scope="col">Type</th>
                              <th class="col-numeric recipe-label text-center" scope="col">Qty</th>
                              <th class="recipe-label text-left" scope="col">Timing</th>
                            </tr>
                          </thead>
                          <tbody id="finings-list">
                            <% if (recipe.recipe.finings.length > 0) { %>
                              <% for (let fining of recipe.recipe.finings) { %>
                                <tr class="finings-row text-center">
                                  <td class="text-left"><%= fining.name %></td>
                                  <td><%= fining.qty %></td>
                                  <td class="text-left"><%= fining.timing %></td>
                                </tr>
                              <% } %>
                            <% } else { %>
                              <tr class="finings-row text-center">
                                <td class="text-left">None</td>
                                <td>-</td>
                                <td class="text-left">-</td>
                              </tr>
                            <% } %>
                          </tbody>                     
                        </table>
                      </div>
                    <!-- </div> -->
                  </div>
                </div>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>



        
    

  
