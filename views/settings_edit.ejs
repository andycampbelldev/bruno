                      <div class="col-sm-12">
                        <input id="mashOutTempMetric" class="form-control form-control-sm bottom-border" type="number" min="0" step="0.01" name="brewhouse[mashOutTempMetric]" value="77">
                      </div>
                    </div>
                  </div>
                  <div class="col-6 col-md-3">
